<%- include('../partials/header') %>

<h2>Add Certifications</h2>

<form id="new-cert-form" action="/profile/add-cert" method="POST">
    <label>Certification
        <input type="String" name="cert">
    </label><br>
    <label>Expiry
        <input type="String" name="expiration">            
    </label><br>

    <input id="new-cert-button" type="submit" value="Add Cert">
</form>

<table>
    <thead>
        <th>&nbsp</th>
        <th>Certificate</th>
        <th>Expiry</th>
    </thead>
    <tbody>
        <% profile.certs.forEach(function(c) { %>
        <tr>
            <td class="remove-column">
                <form action="/profile/cert/<%= c._id%>?_method=DELETE"
                    class="delete-cert-form" method="POST">
                    <button type="submit">X</button>
                </form>
            </td>
            <td><%= c.cert %></td>
            <td><%= c.expiration %></td>
        </tr>
        <% }); %>
    </tbody>
</table> <br>


<a href="/profile"><button>Done</button></a>
