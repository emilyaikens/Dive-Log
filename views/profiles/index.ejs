<%- include('../partials/header') %>

<h1><%= user.name%></h1>

<% if (profile) { %>
    
    <img src="<%= user.avatar %>">

    <div>Username:</div>
    <div><%= profile.nickname%></div>    

    <div>Started Diving:</div>
    <div><%= profile.startDate%></div>

    <div>Favorite dive site:</div>
    <div><%= profile.favorite%></div>    

    <br>
    <a href="/profile/edit"><button>Edit Profile</button></a>

<% } else { %>  

    <a href="/profile/new"><button>Add Information</button></a>

<% } %>

<% if  ( profile.certs.length ) { %>
    
    <div>My Certifications</div>

    <% profile.certs.forEach(function(c) { %>
        <table>
            <thead>
                <th>Certificate</th>
                <th>Expiry</th>
            </thead>
            <tbody>
                <tr>
                    <td><%= c.cert %></td>
                    <td><%= c.expiration %></td>
                </tr>
            </tbody>
        </table>
    <% }); %>

    <% } else { %>
        <br>
        <a href="/profile/certs"><button>Add / Delete Certifications</button></a>
    <% }; %>
