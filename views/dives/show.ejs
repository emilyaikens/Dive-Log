<%- include('../partials/header') %>


<img class="head-img" src="https://i.imgur.com/8ZYAXB6.png">

<h1>dive no. <%= dive.number %></h1>

<div class="content-body">

    <h2>Details</h2>
    <br>

    <!-- dive log details -->

    <div><strong>Dive Site:</strong> <%= dive.site%></div>
    <br>
    <div><strong>Dive Buddy:</strong> <%= dive.buddy%></div>
    <br>
    <div><strong>Date:</strong> <%= dive.date%></div>
    <br>
    <div><strong>Time:</strong> <%= dive.time%></div>
<hr>
    <br>
    <div><strong>Exposure Protection:</strong> <%= dive.protection%></div>
    <br>
    <div><strong>Weight:</strong> <%= dive.weight%> <%= dive.weightUnits%></div>
    <br>
    <div><strong>Entry:</strong> <%= dive.entry%></div>
    <br>
    <div><strong>Conditions:</strong> <%= dive.conditions%></div>
    <br>
    <div class="flex-container">
        <div class="flex-content"><strong>Air Temp:</strong> <%= dive.airTemp%> <%= dive.tempUnits%></div>
        <br>
        <div class="flex-content"><strong>Surface Temp:</strong> <%= dive.surfaceTemp%> <%= dive.tempUnits%></div>
        <br>
        <div class="flex-content"><strong>Water Temp:</strong> <%= dive.waterTemp%> <%= dive.tempUnits%></div>
    </div>
<hr>
    <br>
    <div class="flex-container">
        <div class="flex-content"><strong>Starting Air Pressure:</strong> <%= dive.startAir%> <%= dive.airUnits%></div>
        <br>
        <div class="flex-content"><strong>Ending Air Pressure:</strong> <%= dive.endAir%> <%= dive.airUnits%></div>
    </div>
    <br>
    <div><strong>Maximum Depth:</strong> <%= dive.maxDepth%> <%= dive.depthUnits%></div>
    <br>
    <div><strong>Bottom Time:</strong> <%= dive.bottomTime%></div>
<hr>    
    <br>
    <div><strong>Notes:</strong></div>
    <div><%= dive.notes%></div>
    <br>
    <a href="/dives/<%= dive._id%>/edit"><button class="style-button">edit dive</button></a>
    <br>
    <br>
    <a href="/dives"><button class="style-button">all dives</button></a>

</div>

<footer>
    <%- include('../partials/footer'); %>
</footer>