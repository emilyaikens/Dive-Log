<%- include('../partials/header') %>

<img class="head-img"src="https://i.imgur.com/77SOMnK.png">

<h1 id="index-h1">D I V E &nbsp L O G</h1>

<div class="content-body">

<!-- add dive button -->
<% if (dives.length) { %>
    <form id="add-new-dive"action="/dives/new">
        <input class="style-button" type="submit" value="add dive">
    </form>
<% }; %>
    <h2>my dives</h2>
    <br>

<!-- show dives     -->
<% if (dives.length) {%>
    <% dives.forEach(function(d) { %>
            <div class = "flex-container">
                <div class = "flex-content"><strong>no. <%= d.number%></strong></div>
                <div class = "flex-content"> <%= d.date%></div>
                <div class = "flex-content"><%= d.site%></div>
                <div class = "flex-content"><a class ="dive-details" href="/dives/<%= d._id %>">view</a></div>
            </div>
            <hr>
            <br>
        <% 
        }); %>
        
<!-- if user has no dive logged yet -->
<% } else { %>
    <div>You have not logged any dives yet</div>
    <br>
    <form action="/dives/new">
        <input class="style-button" type="submit" value="add dive">
    </form>
<% }; %>

</div>

<footer>
    <%- include('../partials/footer'); %>
</footer>
